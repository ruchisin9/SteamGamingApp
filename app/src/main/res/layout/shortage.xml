<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:CustomTextView="http://schemas.android.com/apk/res-auto"
    xmlns:CustomButton="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_margin="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/shortage_cross"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/cross"
                android:layout_gravity="right"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"/>

            <ImageView
                android:id="@+id/thumbnailimg"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_height="@dimen/album_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />
            <com.assignedpro.nj.steam.utills.CustomTextView
                android:id="@+id/shortage_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Players Online..!!"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"
                CustomTextView:textStyle="8"/>
            <com.assignedpro.nj.steam.utills.CustomTextView
                android:id="@+id/getcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INVOICE NO."
                android:textColor="@color/star_color"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_4"
                CustomTextView:textStyle="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>